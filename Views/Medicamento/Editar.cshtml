@model proyectoFinal.Models.Entidades.Medicamento
@{
    ViewData["Title"] = "EditarMedicamento";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Medicamento</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MedicamentoID" />
                <div class="mb-3">
                    <label class="form-label">Nombre Medicamento</label>
                    <input class="form-control" type="text" asp-for="NombreMedicamento" pattern="[A-Za-zÁÉÍÓÚáéíóú]+" required />
                    <span asp-validation-for="NombreMedicamento" class="field-validation-error"></span>
                    <div class="text-danger">Ingresa solo letras, no números ni caracteres especiales.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Forma Farmaceutica</label>
                    <input class="form-control" type="text" asp-for="FormFarmaceutica" pattern="[A-Za-zÁÉÍÓÚáéíóú]+" required />
                    <span asp-validation-for="FormFarmaceutica" class="field-validation-error"></span>
                    <div class="text-danger">Ingresa solo letras, no números ni caracteres especiales.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo</label>
                    <input class="form-control" type="text" asp-for="Tipo" pattern="[A-Za-zÁÉÍÓÚáéíóú]+" required />
                    <span asp-validation-for="Tipo" class="field-validation-error"></span>
                    <div class="text-danger">Ingresa solo letras, no números ni caracteres especiales.</div>
                </div>

                <div class="form-group">
                    <label class="form-label">Dosis o concentración</label>
                    <input asp-for="Concentracion" class="form-control" placeholder=" Concentracion" />
                    <span asp-validation-for="Concentracion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Fecha</label>
                    <input asp-for="FechaVencimiento" class="form-control" placeholder="Fecha" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


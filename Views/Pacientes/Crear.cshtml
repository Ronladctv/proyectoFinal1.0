@model proyectoFinal.Models.Entidades.Pacientes
@{
    ViewData["Title"] = "CrearPaciente";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Paciente</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Cedula</label>
                    <input class="form-control" type="text" asp-for="Cedula" required />
                    <span asp-validation-for="Cedula" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre Paciente</label>
                    <input class="form-control" type="text" asp-for="NombrePaciente" required />
                    <span asp-validation-for="NombrePaciente" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellido Paciente</label>
                    <input class="form-control" type="text" asp-for="ApellidoPaciente" required />
                    <span asp-validation-for="ApellidoPaciente" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo</label>
                    <input class="form-control" type="text" asp-for="Correo" required />
                    <span asp-validation-for="Correo" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefono</label>
                    <input class="form-control" type="text" asp-for="Telefono" required />
                    <span asp-validation-for="Telefono" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Edad</label>
                    <input class="form-control" type="text" asp-for="Edad" required />
                    <span asp-validation-for="Edad" class="field-validation-error"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

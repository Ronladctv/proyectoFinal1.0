@model proyectoFinal.Models.Entidades.Especialidad
@{
    ViewData["Title"] = "CrearEspecialidad";
    Layout = null;
}


<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Especialidad</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Nombre Especialidad</label>
                    <input class="form-control" type="text" asp-for="NombreEspecialidad" pattern="[A-Za-zÁÉÍÓÚáéíóú\s]+" required />
                    <span asp-validation-for="NombreEspecialidad" class="field-validation-error"></span>
                    <div class="text-danger">Ingresa solo letras y espacios, no números ni caracteres especiales.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <input class="form-control" type="text" asp-for="Descripcion" pattern="[A-Za-zÁÉÍÓÚáéíóú\s]+" required />
                    <span asp-validation-for="Descripcion" class="field-validation-error"></span>
                    <div class="text-danger">Ingresa solo letras y espacios, no números ni caracteres especiales.</div>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



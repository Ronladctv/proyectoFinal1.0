@model proyectoFinal.Models.Entidades.Roles
@{
    ViewData["Title"] = "EditarRoles";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Rol</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RolID" />
                <div class="form-group">
                    <label></label>
                    <input asp-for="NombreRol" class="form-control" placeholder=" NombreRol" />
                    <span asp-validation-for="NombreRol" class="text-danger"></span>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

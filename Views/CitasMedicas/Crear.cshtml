@model proyectoFinal.Models.Entidades.CitasMedicas
@{
    ViewData["Title"] = "CrearCitasMedicas";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Cita Médica</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Crear" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Tipo de Consulta</label>
                    <input class="form-control" type="text" asp-for="TipoConsulta" required />
                    <span asp-validation-for="TipoConsulta" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <select asp-for="Estado" asp-items="@(new SelectList(Enum.GetValues(typeof(proyectoFinal.Models.Entidades.EstadoCita))))" class="form-control" required>
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="Estado" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Notas</label>
                    <textarea class="form-control" asp-for="Notas"></textarea>
                    <span asp-validation-for="Notas" class="field-validation-error"></span>
                </div>

              

                <div class="mb-3">
                    <label class="form-label">Fecha y Hora de la Cita</label>
                    <input class="form-control" type="datetime-local" asp-for="FechaHoraCita" required />
                    <span asp-validation-for="FechaHoraCita" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Duración Estimada</label>
                    <input class="form-control" type="text" asp-for="Duracion" required />
                    <span asp-validation-for="Duracion" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Paciente</label>
                    <select asp-for="PacienteId" asp-items="@(new SelectList(Model.Paciente, "Value", "Text"))" class="form-control" required>
                        <option value="">Seleccione un paciente</option>
                    </select>
                    <span asp-validation-for="PacienteId" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Doctor</label>
                    <select asp-for="Doctorid" asp-items="@(new SelectList(Model.Doctor, "Value", "Text"))" class="form-control" required>
                        <option value="">Seleccione un doctor</option>
                    </select>
                    <span asp-validation-for="Doctorid" class="field-validation-error"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <a asp-action="ListadoCitasMedicas" class="btn btn-sm btn-primary"><i class="fa fa-ban"></i> Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
